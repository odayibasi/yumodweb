{
    "name": "Medium Writer's Info",
    "version": "1.0",
    "description": "Gives Quick Information About Medium Writers",
    "permissions": ["activeTab", "declarativeContent", "storage","tabs"],
    "options_page": "options.html",
    "background": {
        "scripts": ["js/core/background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_title": "Medium Writer's Info",
        "default_icon": {
            "16": "images/icons/get_started16.png",
            "32": "images/icons/get_started32.png",
            "48": "images/icons/get_started48.png",
            "128": "images/icons/get_started128.png"
        }
    },
    "icons": {
        "16": "images/icons/get_started16.png",
        "32": "images/icons/get_started32.png",
        "48": "images/icons/get_started48.png",
        "128": "images/icons/get_started128.png"
    },
    "manifest_version": 2
}